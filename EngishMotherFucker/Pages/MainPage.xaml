<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EngishMotherFucker"
             xmlns:viewModels="clr-namespace:EngishMotherFucker.ViewModels"
             x:Class="EngishMotherFucker.MainPage"
             x:Name="MainPageRef"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <!--
            МАЙКРОСОФТ - ХУЕСОСЫ, ПОЧЕМУ ЧТОБЫ УБРАТЬ ОРАНЖЕВОЕ ВЫДЕЛЕНИЕ
            НА АНДРОИД, НАДО ПОЛ ИНТЕРНЕТА ОБЫСКАТЬ. BULLSHIT
        -->
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                            Value="Transparent" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto, Auto, *"
          Padding="10">

        <Grid Grid.Row="0"
                ColumnDefinitions="*,Auto,Auto"
                Padding="0,5">
            <SearchBar Placeholder="Поиск"
                       Text="{Binding SearchText}"
                       TextChanged="OnSearchTextChanged"/>

            <Picker Grid.Column="1"
                    ItemsSource="{Binding SearchCriterionOptions}"
                    ItemDisplayBinding="{Binding DisplayName}"
                    SelectedItem="{Binding SelectedOption}"
                    WidthRequest="130"
                    Margin="10,0,0,0"/>

            <Button Text="⚙"
                    Command="{Binding OpenSettingsCommand}"
                    Grid.Column="2"
                    Margin="10,0,0,0"/>
        </Grid>

        <!-- Кнопки -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Padding="0,5" ColumnSpacing="10">
            <Button Text="Добавить слово" Command="{Binding AddWordCommand}"/>
            <Button Grid.Column="1" Text="Тренажёр" Command="{Binding StartTrainerCommand}"/>
        </Grid>

        <!-- Слова -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding FilteredWords}"
                        SelectionMode="Single"
                        SelectionChanged="OnWordSelected">

            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Label Text="{Binding EmptyMessage}"
                            FontSize="16"
                            Margin="20"
                            HorizontalTextAlignment="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Border Padding="15">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="2*,Auto,Auto"
                                    VerticalOptions="Center">

                                <!-- Колонка 0: Слово + перевод -->
                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding Word}"
                                           FontAttributes="Bold"
                                           FontSize="18"/>
                                    <Label Text="{Binding Translation}"
                                           FontSize="14"
                                           TextColor="Gray"/>
                                </StackLayout>

                                <!-- Колонка 1: Часть речи -->
                                <Label Grid.Column="1"
                                       Text="{Binding PartOfSpeech}"
                                       FontSize="14"
                                       TextColor="DarkSlateGray"
                                       VerticalOptions="Center"
                                       Margin="10,0"/>

                                <!-- Колонка 2: Тема -->
                                <Label Grid.Column="2"
                                       Text="{Binding Topic}"
                                       FontSize="12"
                                       TextColor="DarkGray"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Margin="10,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
