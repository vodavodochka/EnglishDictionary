<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngishMotherFucker.TrainerStartPage"
             Title="TrainerStartPage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout Padding="20"
            Spacing="30">

        <!-- Привественный текст -->
        <Label Text="Добро пожаловать в тренажёр!"
                FontSize="24"
                HorizontalOptions="Center"/>

        <!-- Краткое описание -->
        <Label Text="Интерактивный тренажёр позволяет вам практиковать слова из словаря в формате теста с вариантами ответов.&#x0a;&#x0a;⚠️ Если подходящих слов меньше заданного количества — вопросов будет меньше. Если ни одно слово не подходит — тренажёр не запустится."/>
        <Label Text="{Binding QuestionCount, StringFormat='- Количество вопросов: {0}'}"/>
        <Label Text="{Binding SelectedPrinciple, StringFormat='- Принцип: {0}'}"/>

        <!-- Кнопка для начала тренировки -->
        <Button Text="Начать тренировку"
                Command="{Binding StartTrainerCommand}"/>

    </VerticalStackLayout>
</ContentPage>