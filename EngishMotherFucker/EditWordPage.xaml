<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngishMotherFucker.EditWordPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry Text="{Binding Word.Word}" Placeholder="Слово" IsReadOnly="True" />
            <Entry Text="{Binding Word.Translation}" Placeholder="Перевод" />
            <Entry Text="{Binding Word.Transcription}" Placeholder="Транскрипция" />
            <Entry Text="{Binding Word.DefinitionRu}" Placeholder="Определение (рус)" />
            <Entry Text="{Binding Word.DefinitionEn}" Placeholder="Определение (англ)" />
            <Entry Text="{Binding Word.Topic}" Placeholder="Тема" />
            <Button Text="Сохранить" Command="{Binding SaveCommand}" Margin="0,10,0,10"/>
		    <Button Text="Удалить" Command="{Binding DeleteCommand}" BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>